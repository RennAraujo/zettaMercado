# ===========================================
# ZETTAMERCADO - VARIÁVEIS DE AMBIENTE
# ===========================================
# IMPORTANTE: Copie este arquivo para .env e configure os valores reais
# NUNCA commite o arquivo .env no repositório!

# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================
POSTGRES_DB=nome_do_banco
POSTGRES_USER=usuario_do_banco
POSTGRES_PASSWORD=senha_super_segura_do_banco
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/nome_do_banco
SPRING_DATASOURCE_USERNAME=usuario_do_banco
SPRING_DATASOURCE_PASSWORD=senha_super_segura_do_banco

# ===========================================
# CONFIGURAÇÕES DO REDIS
# ===========================================
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
REDIS_PASSWORD=senha_do_redis_opcional

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
# Token para modo demonstração (mínimo 32 caracteres)
DEMO_TOKEN=seu_token_demo_super_secreto_aqui_minimo_32_chars

# Chave secreta para JWT (mínimo 256 bits / 32 bytes)
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_minimo_256_bits

# Salt para criptografia adicional
ENCRYPTION_SALT=seu_salt_de_criptografia_aqui

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR
# ===========================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=production

# ===========================================
# CONFIGURAÇÕES DE CORS
# ===========================================
# URLs permitidas para CORS (separadas por vírgula)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,https://seudominio.com

# ===========================================
# CONFIGURAÇÕES DE LOGGING
# ===========================================
# Nível de log (ERROR, WARN, INFO, DEBUG)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO

# ===========================================
# CONFIGURAÇÕES DE UPLOAD
# ===========================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ===========================================
# CONFIGURAÇÕES DE EMAIL (se necessário)
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_de_app_do_gmail

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================
# Habilitar endpoints de monitoramento (true/false)
MANAGEMENT_ENDPOINTS_ENABLED=false
ACTUATOR_ENDPOINTS_ENABLED=false